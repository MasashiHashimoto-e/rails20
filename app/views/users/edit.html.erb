<%= render "shared/error", obj: @user %>
<div class = "box">
<div class = "box-inner">
<%= form_with model: @user, url: user_path do |f| %>
<h2>プロフィールの編集</h2>
    <h3>アイコン</h3>
    <p>
        <% if @user.image? %>
            <%= image_tag @user.image.url, size: '300x200' %>
        <% else %>
            <%= image_tag ("default_icon.png"), size: '30x30' %>
        <% end %>
    </p>
    <%= f.hidden_field :user_id, value: current_user.id %>
        <div class = "profile-avatar">
            <p><%= f.file_field :image, accept: 'image/*' %></p>
            <%= f.hidden_field :board_image_cache %>
        </div>
        <div class = "profile-name">
            <p><%= f.label :user_name ,"名前" %></p>
            <p><%= f.text_field :user_name %></p>
        </div>

        <div class = "profile-introduction">
            <p><%= f.label :user_detail ,"自己紹介" %></p>
            <p><%= f.text_field :user_detail %></p>
        </div>
    <div class = "box-buttons">
        <p><%= f.submit "編集を保存する" %></p>
        <p><%= link_to "戻る", :back %></p>
    </div>
    </div>
    </div>
<% end %>