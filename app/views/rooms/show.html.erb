<div class = "room-show">
    <h2>施設詳細</h2>   
    <%= link_to "戻る", :back %>
    <%= form_with model: @room do |f| %>
    <table>
        <tr>
            <th><%= f.label :avatar ,"施設画像" %></th>
            <td><%= image_tag @room.avatar.url,size: '300x200' %></td>
        </tr>
        <tr>
            <th><%= f.label :name ,"施設名" %></th>
            <td><%= @room.name %></td>
        </tr>
        <tr>
            <th><%= f.label :introduction ,"施設詳細" %></th>
            <td><%= @room.introduction %></td>
        </tr>
        <tr>
            <th><%= f.label :price ,"料金" %></th>
            <td> ¥<%= @room.price %> 〜</td>
        </tr>
        <tr>
            <th><%= f.label :address ,"住所" %></th>
            <td><%= @room.address %></td>
        </tr>
    </table>
    <div class = "hidden">
        <% f.hidden_field :user_id, value: @user_id %>
        <% f.hidden_field :room_id, value: @room_id %>
    </div>
    <div class = "reserve-button">
    <%= link_to "予約する"  %>
    </div>
<% end %>
</div>